<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:myApp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="10dp"
    myApp:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background"
            myApp:layout_constraintLeft_toLeftOf="parent" />


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:gravity="start"
            android:text="FOSTER"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/tv_small"
            android:textStyle="bold"
            myApp:layout_constraintLeft_toRightOf="@+id/ivLogo"
            myApp:layout_constraintRight_toRightOf="parent"
            myApp:layout_constraintTop_toTopOf="@+id/ivLogo"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/tvStatus1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="FOSTER"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/tv_small"
            android:textStyle="normal"
            myApp:layout_constraintLeft_toLeftOf="@+id/tvTitle"
            myApp:layout_constraintRight_toRightOf="parent"
            myApp:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/tvStatus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="FOSTER"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/tv_very_small"
            android:textStyle="normal"
            myApp:layout_constraintLeft_toLeftOf="@+id/tvStatus1"
            myApp:layout_constraintTop_toBottomOf="@+id/tvStatus1" />


        <LinearLayout
            android:id="@+id/llInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            myApp:layout_constraintBottom_toBottomOf="@+id/tvStatus2"
            myApp:layout_constraintRight_toRightOf="parent"
            myApp:layout_constraintTop_toTopOf="@+id/tvStatus2">


            <TextView
                android:id="@+id/tvrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/curved"
                android:gravity="center"
                android:text="4.2"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/tv_very_small"
                android:textStyle="normal"
                myApp:layout_constraintLeft_toLeftOf="@+id/tvStatus1"
                myApp:layout_constraintRight_toLeftOf="@+id/llInfo"
                myApp:layout_constraintRight_toRightOf="parent"
                myApp:layout_constraintTop_toBottomOf="@+id/tvStatus1" />


            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/curved"
                android:gravity="center"
                android:text="February"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/tv_very_small"
                android:textStyle="normal"
                myApp:layout_constraintLeft_toLeftOf="@+id/tvStatus1"
                myApp:layout_constraintRight_toLeftOf="@+id/llInfo"
                myApp:layout_constraintRight_toRightOf="parent"
                myApp:layout_constraintTop_toBottomOf="@+id/tvStatus1" />


            <TextView
                android:id="@+id/tvWeeks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/curved"
                android:gravity="center"
                android:text="Weeks"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/tv_very_small"
                android:textStyle="normal"

                myApp:layout_constraintLeft_toLeftOf="@+id/tvStatus1"
                myApp:layout_constraintRight_toLeftOf="@+id/llInfo"
                myApp:layout_constraintRight_toRightOf="parent"
                myApp:layout_constraintTop_toBottomOf="@+id/tvStatus1" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>